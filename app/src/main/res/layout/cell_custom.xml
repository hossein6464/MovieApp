<!--                android:layout_height="30dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/icon_sms"-->
<!--                android:layout_marginRight="8dp"-->
<!--                />-->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>