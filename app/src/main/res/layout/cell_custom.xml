<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/icon_call"-->
<!--                android:layout_marginRight="8dp"-->
<!--                android:contentDescription="TODO" />-->
